<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:paddingTop="@dimen/_dp8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nguyenducdungbk.myapp.view.custom.SelectableRoundedImageView
            android:id="@+id/ivCover"
            android:layout_width="@dimen/margin_72dp"
            android:layout_height="@dimen/margin_72dp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="@dimen/_dp8"
            app:sriv_left_top_corner_radius="@dimen/_dp8"
            app:sriv_right_bottom_corner_radius="@dimen/_dp8"
            app:sriv_right_top_corner_radius="@dimen/_dp8"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_9dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_toEndOf="@+id/ivCover"
            android:ellipsize="end"
            android:fontFamily="@font/lato_heavy"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="3"
            android:minLines="2"
            android:textColor="@color/color_3A454D"
            android:textSize="@dimen/text_size16" />

        <LinearLayout
            android:layout_marginStart="@dimen/margin_9dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toEndOf="@+id/ivCover"
            android:layout_below="@id/tvTitle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tvTime"
                android:layout_width="@dimen/_dp0"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/color_3A454D"
                android:textSize="@dimen/text_size12" />
            <TextView
                tools:text="GiÃ¡: 80000"
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/tvPrice"
                android:layout_width="@dimen/_dp0"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/color_3A454D"
                android:textSize="@dimen/text_size12" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/_dp8"
            android:background="@color/color_DBDBDB"
            android:layout_below="@id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
</layout>