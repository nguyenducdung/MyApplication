<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_red_EF5050"
        android:fitsSystemWindows="false">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="false">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:minHeight="56dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1">

                    <RelativeLayout
                        android:id="@+id/layoutRound"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@color/white" />

                    <ImageView
                        android:src="@drawable/ic_personal_yellow"
                        android:id="@+id/iv_avatar"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="Nguyễn Đức Dũng"
                        android:id="@+id/tv_title"
                        style="@style/TextViewNormalBold"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="105dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_bold"
                        android:lines="1"
                        android:maxWidth="@dimen/_dp200"
                        android:maxLength="50"
                        android:textSize="@dimen/text_size20" />

                    <TextView
                        android:id="@+id/tv_sub_title"
                        style="@style/TextViewNormal"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="129dp"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_size16"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="105dp"
                        android:layout_marginEnd="16dp"
                        android:animateLayoutChanges="true"
                        android:gravity="center_vertical"
                        tools:ignore="RtlHardcoded,UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/ivFavorite"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_setting_white"
                            android:tint="@color/black_A4A6A8" />

                        <TextView
                            android:id="@+id/tvFavorite"
                            style="@style/TextViewNormal"
                            android:layout_marginLeft="@dimen/margin_4dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/edit_title"
                            android:textColor="@color/black_A4A6A8"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="47dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:animateLayoutChanges="true"
                        android:gravity="center_vertical"
                        tools:ignore="RtlHardcoded,UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_shortcut"
                            android:tint="@color/white"/>

                        <TextView
                            android:id="@+id/tv_setting"
                            style="@style/TextViewNormal"
                            android:layout_marginLeft="@dimen/margin_4dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/logout"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />
                    </LinearLayout>

                </FrameLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_dp16"
                    android:layout_marginEnd="@dimen/_dp16"
                    android:background="@color/color_DBDBDB" />
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_voucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar_layout"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
