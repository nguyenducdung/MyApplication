<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.impl.MainActivity">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_orderfood"
            android:layout_marginBottom="@dimen/_dp70"
            android:layout_marginEnd="@dimen/_dp24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:elevation="@dimen/_dp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_order"
                android:src="@drawable/icon_order"
                android:layout_width="@dimen/_dp48"
                android:layout_height="@dimen/_dp48"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</layout>
